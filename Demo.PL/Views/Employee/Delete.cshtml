@model EmployeeVM

@{
    ViewData["Title"] = "Details";
}

    @section JqueryUI{
     <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet">
     }

<div class="block-header">
  <h2>@Model.Name Details</h2>
</div>

<form asp-controller="Employee" asp-action="Delete" class="form-group">

    <input type="hidden" asp-for="Id" />

   @{await Html.RenderPartialAsync("~/Views/Partials/Employee/DeleteOrDetails.cshtml");}

    <centr>
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Employee" class="btn btn-warning">Return</a>
        <a asp-action="Update" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
    </centr>
</form>